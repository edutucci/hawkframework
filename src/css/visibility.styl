$xs = 640px
$sm = 960px
$md = 1440px
$lg = 1920px

/* show an element when screen size is 640px*/
@media screen and (width: $xs) {
  .xs { display: block; }
  #xs { display: block; }
}

/* hide an element when screen size is lower than 640px */
@media screen and (max-width: ($xs - 1)){
  #xs { display: none; }
  .xs { display: none; }
}

/* hide an element when screen size is higher than 640px */
@media screen and (min-width: $xs + 1) {
  #xs { display: none; }
  .xs { display: none; }
}

