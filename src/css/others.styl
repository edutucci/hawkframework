/*
  Text Alignment
*/

.text-left
  text-align  left

.text-right
  text-align  right

.text-center
  text-align  center

.text-justify
  text-align  justify

/*
text helpers
*/

.text-white
  color: white

.text-bold
  font-weight: bold

/*
  Sizes
*/

.full-width
  width 100%

.full-height
	height 100%

.full-size
  width 100%
  height 100%

.window-width
  min-width 100vw

.window-height
  min-height 100vh

.full-viewport
  min-width 100vw
  min-height 100vh

.inline-block
  display: inline-block;

/*
  Mouse
*/

.no-user-select {
  -webkit-user-select: none; /* Safari 3.1+ */
  -moz-user-select: none; /* Firefox 2+ */
  -ms-user-select: none; /* IE 10+ */
  user-select: none; /* Standard syntax */  
}

.cursor-pointer
  cursor pointer

.scroll
  overflow-y  auto
  overflow-x  auto

.scroll-x-only
  overflow-x auto
  overflow-y hidden

.scroll-y-only
  overflow-x hidden
  overflow-y auto

.no-margin
  margin 0

.no-padding
  padding 0

.no-border
  border  none

.overflow-hidden
  overflow: hidden

.overflow-x-hidden
  overflow-x: hidden

.overflow-y-hidden
  overflow-y: hidden

.text-overflow-ellipsis
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
